@model IEnumerable<PlugPool.Domain.Model.ProfileImage>
@{
    ViewBag.Title = "_ProfileImages";
}

<div>
    <table>
      
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <img src="@Url.Action("GetProfileImg", "Profile", new { id = item.accountID })" height="150" width="150" />
                    </td>
                    @*<td>
                        @Html.DisplayFor(modelItem => item.image)
                    </td>*@
                    <td>
                        @Html.DisplayFor(modelItem => item.caption)
                    </td>

                    <td><a href="@Url.Action("DeleteProfileImage", "Profile", new { id = item.profileImageID })">Delete</a></td>
                </tr>
            }
        </tbody>

    </table>
</div>





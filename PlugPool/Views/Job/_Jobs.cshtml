@model IEnumerable<PlugPool.Domain.Model.Job>

@{
    ViewBag.Title = "_Jobs";
}

<h4>Jobs</h4>

<div>
    <table>
        <tr>
            <th>Name</th>
            <th>DateCreated</th>
            <th>DateUpdated</th>
        </tr>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.createDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.updateDate)
                    </td>
                    <td><a href="@Url.Action("Edit", "Job", new { id = item.jobID })">Edit</a></td>
                </tr>
            }
        </tbody>

    </table>
</div>

